<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
    <!-- appender určuje, kam se bude logovat, v tomto případě na konzolu -->
    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] | %-5p | %c{1} | %M  - %m%n"/>
        </layout>
    </appender>

    <appender name="FILE" class="org.apache.log4j.FileAppender">
        <param name="File" value="${java.io.tmpdir}${file.separator}Analyzer_tool.log" />
        <!--Append to current log file-->
        <param name="append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] | %-5p | %c{1} | %M  - %m%n" />
        </layout>
    </appender>

    <logger name="interactive.analyzer.gui.ObjectFilteringFrame"> <level value="trace"/></logger>
    <logger name="interactive.analyzer.graph.GraphPanel"> <level value="info"/></logger>
    <logger name="interactive.analyzer.gui.InteractiveAnalyzerResultFrame"> <level value="warn"/></logger>
    <logger name="interactive.analyzer.presenter"> <level value="NONE"/></logger>

    <root>
        <priority value="INFO"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</log4j:configuration>